<div class="text-center mt-5">
  <div container>
    <h1 class="text-success">To Do List</h1>
    <ul class="list-unstyled fs-3">
      <% @tasks.each do |task| %>
        <li>
          <%= check_box_tag "task_#{task.id}", task.id, task.completed %>
          <%= link_to task.title, task_path(task.id), class: 'text-decoration-none' %>
          <%= link_to task_path(task), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: 'text-decoration-none' do %>
            <i class="fa-regular fa-trash-can"></i>
          <% end %>
        </li>
      <% end %>
    </ul>

    <h3> + <%= link_to "Add a task", tasks_new_path, class: 'text-decoration-none' %><h3>
  </div>
</div>
